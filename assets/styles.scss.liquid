//   - using data URIs to prevent any additional http requests
==============================================================================*/
.sprite {
  display: block;
  text-indent: -9999px;
  background-repeat: no-repeat;
  background-position: 0 0;
}

.ajaxcart__close {
  @extend .sprite;
  position: absolute;
  top: 20px;
  right: 20px;
  opacity: 0;
  visibility: hidden;
  border: 0 none;
  width: 30px;
  height: 25px;
  cursor: pointer;
  background: {
    color: transparent;
    position: center center;
    image: url(data:image/png;base64,)
  }
  z-index: 999999999;
  @include transition(all 450ms cubic-bezier(0.57,.06,.05,.95));

  .is-visible & {
    opacity: 0.8;
    visibility: visible;
    @include transition(opacity 650ms cubic-bezier(0.57, 0.06, 0.05, 0.95) 200ms);
  }

  &:hover {
    opacity: 1;
  }
}
