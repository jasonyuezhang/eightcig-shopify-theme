/// @example scss
///   .wrapper {
///     @include word-wrap(break-word);
///   }
///
///   // CSS Output
///   .wrapper {
///     overflow-wrap: break-word;
///     word-break: break-all;
///     word-wrap: break-word;
///   }

@mixin word-wrap($wrap: break-word) {
  overflow-wrap: $wrap;
